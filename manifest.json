{
  "manifest_version": 3,
  "name": "Auto Clicker",
  "version": "1.0",
  "description": "Automatically click at selected points with customizable intervals",
  "permissions": [
    "activeTab",
    "storage",
    "commands",
    "scripting"
  ],
  "host_permissions": [
    "*://*.vk.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Open Auto Clicker popup"
    },
    "toggle-clicker": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Toggle auto clicker"
    }
  }
} 